<div class="container">

  <h1>New Game</h1>
  <ul id="wordlist">
  <% @letters.each {|letter| %>
    <li><%= letter %></li>
  <% } %>
  </ul>

  <p>What is the longest work you can find?<p>

  <form action="/score" method ="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid1, @letters %>
    <input name="grid" type="hidden" value="<%= @letters.join(' ') %>" />
    <div class="form-group">
      <input type="text" name="answer" id="answer">
    </div>
    <div class="form-group">
      <button type="submit" value="Play" class="btn btn-primary">Play</button>
    </div>
  </form>
</div>
